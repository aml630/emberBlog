{{#if addNewEntry}}
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="post">Post</label>
      {{textarea value=post id="post"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <!-- <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div> -->

    <button class = "btn btn-danger" {{action 'savePost' }}>Save</button>

    <button class = "btn btn-warning" {{action 'entryFormHide' }} >Hide</button>
  </form>
</div>
{{else}}
<button class = "btn btn-danger"{{action 'entryFormShow'}}>Add New Post</button>
{{/if}}
