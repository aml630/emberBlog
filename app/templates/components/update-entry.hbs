{{#if updateEntry}}
<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title1 id="title1" placeholder=entry.title}}
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author1 id="author1" placeholder=entry.author}}
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    {{input value=date1 id="date1" placeholder=entry.date}}
  </div>

  <div class="form-group">
    <label for="post">Post</label>
    {{input value=post1 id="post1" placeholder=entry.post}}
  </div>

  <button {{ action 'updatePost' entry}}>Update Post</button>
</form>
{{else}}
<button {{action "updateEntryForm"}}>ShowUpdate</button>
{{/if}}
